<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <hr>
    <h3>Review this product</h3>
      <%= form_for [@product, @review] do |f| %>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :rating %>
      <%= f.number_field :rating, in: 1.0..10.0%>
    </p>
    <p>
      <%= f.submit "Submit Review" %>
    </p>
  <% end %>
    <hr>


    <% @product.reviews.order('id DESC').each do |review| %>
    <hr>
    <div class="row">
    <span class="bg-danger">Reviewed by: <%= review.user.first_name %><%= review.user.last_name %></span><br>
    <span class="bg-danger">Rating: <%= review.rating %></span><br >
    <span class="bg-danger">Description: <%= review.description %></span>
    <aside><%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></aside>

    <hr>
    </div>


    <% end %>

  </article>

</section>
